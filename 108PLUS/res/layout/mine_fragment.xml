<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/personal_header"
        >
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/default_avatar_1" />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="点击登录"
	        android:textColor="#FFF"
	        android:textSize="20sp"
	        />
	</LinearLayout>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="right|center_vertical"
	        >
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="18sp"
            android:textColor="#666"
            android:drawableLeft="@drawable/personal_info_message_icon_unselected"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mine_infos_bg"
            />
        </LinearLayout>
        <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:gravity="left|center_vertical"
	        >
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textSize="18sp"
            android:textColor="#666"
            android:drawableLeft="@drawable/personal_info_storage_icon_unselected"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/mine_infos_bg"
            />
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <RadioGroup 
	        android:id="@+id/mine_rg"
	        android:layout_width="match_parent"
	        android:layout_height="70dp"
	        android:background="#fff"
	        android:orientation="horizontal"
	        android:gravity="center"
	        >
        
	        <RadioButton 
	            android:id="@+id/mine_rb_code"
	            android:text="消费码"
	            android:gravity="center"
	            android:drawableTop="@drawable/personal_info_code_icon_unselected"
	            style="@style/mine_rb_style"
	            />
        	<View 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:background="@color/line_color"
	        />
	        <RadioButton 
	            android:id="@+id/index_bottom_discover"
	            android:text="待付款"
	            android:gravity="center"
	            android:drawableTop="@drawable/personal_info_unpay_icon_unselected"
	            style="@style/mine_rb_style"
	            />
	        <View 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:background="@color/line_color"
	        />
	        <RadioButton 
	            android:id="@+id/index_bottom_event"
	            android:text="待评价"
	            android:gravity="center"
	            android:drawableTop="@drawable/personal_info_consumed_icon_unselected"
	            style="@style/mine_rb_style"
	            />
	        <View 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:background="@color/line_color"
	        />
	        <RadioButton 
	            android:id="@+id/index_bottom_mine"
	            android:text="未使用"
	            android:gravity="center"
	            android:drawableTop="@drawable/personal_info_unconsume_icon_unselected"
	            style="@style/mine_rb_style"
	            />
    	</RadioGroup>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <TextView 
        android:text="我的订单"
        android:drawableLeft="@drawable/personal_info_order_icon"
        style="@style/mine_setting"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <TextView 
        android:text="我的优惠券"
        android:drawableLeft="@drawable/personal_info_coupon_icon"
        style="@style/mine_setting"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    <TextView 
        android:text="设置"
        android:drawableLeft="@drawable/personal_info_setting_icon"
        style="@style/mine_setting"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
