<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/headImg_purchase"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@drawable/merchant_info_default_background"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="零基础吉他弹唱试听，不容错过哦"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <RadioButton
            style="@style/main_menu_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/unrefund_icon"
            android:text="不支持退款" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/titleView" />

        <RadioButton
            style="@style/main_menu_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/authentication_icon"
            android:text="认证商家" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/titleView" />

        <RadioButton
            android:id="@+id/phoneService_purchase"
            style="@style/main_menu_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/consulting_green_icon"
            android:text="联系客服" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/titleView"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
            android:text="商家信息" />

       <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/titleView"
            android:layout_gravity="center_vertical"
            android:text="TextView" />
       </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="日期：" />

        <TextView
            android:id="@+id/date_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:text="11-08" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/personal_info_more_icon" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginLeft="8dp"
            android:src="@drawable/date_icon" />

    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="30dp" >

         <TextView
             android:id="@+id/name_businiess"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_alignBottom="@+id/business3"
             android:layout_toRightOf="@+id/business3"
             android:text="Dimo吉他私塾" />

         <ImageView
             android:id="@+id/imageView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="14dp"
             android:src="@drawable/personal_info_more_icon" />

         <ImageView
             android:id="@+id/imageView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/business3"
             android:layout_marginLeft="8dp"
             android:src="@drawable/merchant_icon" />

         <TextView
             android:id="@+id/business3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignTop="@+id/imageView4"
             android:layout_marginLeft="20dp"
             android:layout_toRightOf="@+id/imageView3"
             android:text="商家：" />

     </RelativeLayout>
     
    <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="80dp" >
         </RelativeLayout>
</LinearLayout>